# OpenAI API Key (optional, for GPT-4 support)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama settings (local model support)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2:latest

# Default model provider (openai or ollama)
DEFAULT_PROVIDER=ollama

# Vector database settings
VECTOR_DB_PATH=data/embeddings/chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Agent settings
MAX_ITERATIONS=10
TEMPERATURE=0.7
MAX_TOKENS=2000

# Web search API (optional)
SERPAPI_KEY=your_serpapi_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
